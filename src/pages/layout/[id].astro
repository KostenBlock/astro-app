---

import { getSingleLayout } from "../../helpers/api/layouts";

import Layout from "~/layouts/Layout.astro";
import LayoutPage from "~/components/page-components/layout-page/layout-page.astro"

const { id } = Astro.params;

const data = await getSingleLayout(id);
if (!data) return Astro.redirect("/404");
---

<Layout>
    <LayoutPage {...data} />
</Layout>
